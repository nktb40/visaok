# encoding: utf-8
class OrderMailer < ActionMailer::Base
	def send_order_delivery(order)
		@order = order
		email = "help@vizaok.ru"
		mail :to =>  email, :from => "help@vizaok.ru", :subject => "Заявка vizaOK №#{order.id}"
	end
	
	def send_order_customer(order)
		@order = order
		mail :to =>  @order.email, :from => "vizaOK", :subject => "Заявка vizaOK №#{order.id}"
	end
end
