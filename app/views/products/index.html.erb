	  				}
	  				$( "#email_error" ).text("Укажите Ваш e-mail");
	  				return false;
	  			}
	  		$( "#phone_error" ).text("Укажите Ваш номер телефона");
	  		return false;
	  	}
	  	$( "#name_error" ).text("Укажите Ваше имя");
	  	return false;
	});
	
	$( "#new_question" ).submit(function( event ) {
		if ( $( "#question_name" ).val() ) {
	  		if ( $( "#question_email" ).val() ) {
